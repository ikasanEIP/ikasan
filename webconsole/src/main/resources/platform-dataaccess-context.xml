<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">


    
	
	<bean id="initiatorCommandDao"
        class="org.ikasan.framework.flow.initiator.dao.HibernateInitiatorCommandDao">
        <property name="sessionFactory" ref="initiatorCommandHibernateSessionFactory" />
    </bean>

	<bean id="wiretapDao"
		class="org.ikasan.framework.event.wiretap.dao.HibernateWiretapDao">
		<property name="sessionFactory" ref="wiretapHibernateSessionFactory" />
	</bean>

	<bean id="triggerDao"
		class="org.ikasan.framework.flow.event.dao.HibernateTriggerDao">
		<property name="sessionFactory" ref="wiretapHibernateSessionFactory" />
	</bean>
	
	<bean id="errorOccurrenceDao"
		class="org.ikasan.framework.error.dao.HibernateErrorOccurrenceDao">
		<property name="sessionFactory" ref="errorLoggingHibernateSessionFactory" />
	</bean>

	<bean id="platformHibernateProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="ignoreResourceNotFound" value="true"/>
		<property name="location" value="classpath:ikasan-hibernate.properties"/>
	</bean>


	<bean id="wiretapHibernateSessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="ikasanAdminXaDataSource" />
		<property name="mappingResources">
			<list>
				<value>WiretapEventImpl.hbm.xml</value>
				<value>Trigger.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties" ref="platformHibernateProperties"/>
	</bean>
	
	<bean id="initiatorCommandHibernateSessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="ikasanAdminXaDataSource" />
        <property name="mappingResources">
            <list>
                <value>InitiatorCommand.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties" ref="platformHibernateProperties"/>
    </bean>

    <bean id="errorLoggingHibernateSessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="ikasanAdminLocalTxDataSource" />
        <property name="mappingResources">
            <list>
                <value>ErrorOccurrence.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties" ref="platformHibernateProperties"/>
    </bean>
    
	</beans>