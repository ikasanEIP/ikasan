<Ikasan version="1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="ikasan_1_0.xsd">

    <!-- default directories and URLS -->
    <Entry key="ikasan.conf.dir">${jboss.server.home.dir}/conf</Entry>
    <Entry key="ikasan.secure.conf.dir">${jboss.server.home.dir}/conf/secure</Entry>
    <Entry key="ikasan.web.resource">${jboss.server.home.dir}/conf/ikasanWeb.xml</Entry>
    <Entry key="ikasan.security.resource">${ikasan.secure.conf.dir}/ikasanSecurity.xml</Entry>
    <!-- default values for connector local host configration -->
    <Entry key="ikasan.connector.local.host.name">${bind.address}</Entry>
</Ikasan>
