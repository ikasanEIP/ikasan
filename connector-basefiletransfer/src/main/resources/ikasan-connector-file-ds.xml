<datasources>

  <!--
   * No Transaction Datasource configuration.
  -->
  <no-tx-datasource>
    <jndi-name>ikasan/connector/file/ds</jndi-name>
    <use-java-context>true</use-java-context>
    <connection-url>jdbc:sybase:Tds:${connector.file.database.svcname}:${connector.file.database.port}/${connector.file.database.name}</connection-url>
    <driver-class>com.sybase.jdbc3.jdbc.SybDataSource</driver-class>
    <!-- TODO This name will change - The security domain -->
    <!--<security-domain>${connector.file.datasource.name}EncryptionPolicy</security-domain>-->
    <user-name>${connector.file.database.username}</user-name>
    <password>${connector.file.database.password}</password>
    <check-valid-connection-sql>SELECT @@VERSION</check-valid-connection-sql>
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.SybaseExceptionSorter</exception-sorter-class-name>
    <metadata>
      <type-mapping>Sybase</type-mapping>
    </metadata>
  </no-tx-datasource>

  <!--
   * Local Transaction Datasource configuration
  -->
  <local-tx-datasource>
    <jndi-name>ikasan/connector/fileLocal/localds</jndi-name>
    <use-java-context>true</use-java-context>
    <connection-url>jdbc:sybase:Tds:${connector.file.database.svcname}:${connector.file.database.port}/${connector.file.database.name}</connection-url>
    <driver-class>com.sybase.jdbc3.jdbc.SybDataSource</driver-class>
    <!-- TODO This name will change - The security domain -->
    <!--<security-domain>${connector.file.datasource.name}EncryptionPolicy</security-domain>-->
    <user-name>${connector.file.database.username}</user-name>
    <password>${connector.file.database.password}</password>
    <check-valid-connection-sql>SELECT @@VERSION</check-valid-connection-sql>
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.SybaseExceptionSorter</exception-sorter-class-name>
    <metadata>
      <type-mapping>Sybase</type-mapping>
    </metadata>
  </local-tx-datasource>

  <!--
   * Transactional Datasource configuration
   * Persistence of sequence numbers must be within scope of the transaction
  -->
  <xa-datasource>
    <jndi-name>ikasan/connector/fileXA/xads</jndi-name>
    <use-java-context>true</use-java-context>
    <track-connection-by-tx />
    <xa-datasource-class>com.sybase.jdbc3.jdbc.SybXADataSource</xa-datasource-class>
    <xa-datasource-property name="DatabaseName">${connector.file.xa.database.name}</xa-datasource-property>
    <xa-datasource-property name="ServerName">${connector.file.xa.database.svcname}</xa-datasource-property>
    <xa-datasource-property name="PortNumber">${connector.file.xa.database.port}</xa-datasource-property>
    <user-name>${connector.file.database.username}</user-name>
    <password>${connector.file.database.password}</password>
    <!-- TODO This name will change - The security domain -->
    <!--<security-domain>${connector.file.datasource.name}EncryptionPolicy</security-domain>-->
    <check-valid-connection-sql>SELECT @@VERSION</check-valid-connection-sql>
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.SybaseExceptionSorter</exception-sorter-class-name>
    <metadata>
      <type-mapping>Sybase</type-mapping>
    </metadata>
  </xa-datasource>

</datasources>