<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ikasan.tools</groupId>
    <artifactId>t-tools</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Ikasan Topic Tools Project</name>
    <description>Project for TPublisher, TSubscriber type tools formerly embedded within Ikasan Common</description>
   <build>
    <!-- Std plugins -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build> 
    
    <dependencies>
    	<dependency>
    		<groupId>org.ikasan</groupId>
    		<artifactId>ikasan-common</artifactId>
    		<version>0.7.3</version>
    	</dependency>
    	<dependency>
    		<groupId>log4j</groupId>
    		<artifactId>log4j</artifactId>
    		<version>1.2.14</version>
    	</dependency>
    	<dependency>
    		<groupId>commons-cli</groupId>
    		<artifactId>commons-cli</artifactId>
    		<version>1.0</version>
    	</dependency>
    	<dependency>
    		<groupId>geronimo-spec</groupId>
    		<artifactId>geronimo-spec-j2ee</artifactId>
    		<version>1.4-rc3</version>
			<scope>provided</scope>
		</dependency> 
    </dependencies>

</project>

