<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

    <!-- The wiretapDao definition for the Ikasan console -->
    <bean id="wiretapDao" class="org.ikasan.framework.event.wiretap.dao.HibernateWiretapDao">
        <property name="sessionFactory" ref="wiretapHibernateSessionFactory" />
    </bean>

    <!-- The pointToPointFlowProfileDao definition for the Ikasan console -->
    <bean id="pointToPointFlowProfileDao" class="org.ikasan.console.pointtopointflow.dao.HibernatePointToPointFlowProfileDao">
        <property name="sessionFactory" ref="pointToPointFlowProfileHibernateSessionFactory" />    
    </bean>

    <!-- The moduleDao definition for the Ikasan console -->
    <bean id="moduleDao" class="org.ikasan.console.module.dao.HibernateModuleDao">
        <property name="sessionFactory" ref="moduleHibernateSessionFactory" />
    </bean>

    <!-- The initiatorCommandDao definition for the Ikasan framework -->
    <!-- 
    <bean id="initiatorCommandDao" class="org.ikasan.framework.flow.initiator.dao.HibernateInitiatorCommandDao">
        <property name="sessionFactory" ref="initiatorCommandHibernateSessionFactory" />
    </bean>
    -->
    <!-- The initiatorStartupControlDao definition for the Ikasan framework -->
    <bean id="initiatorStartupControlDao" class="org.ikasan.framework.flow.initiator.dao.HibernateInitiatorStartupControlDao">
        <property name="sessionFactory" ref="initiatorStartupControlHibernateSessionFactory" />
    </bean>

    <!-- Session Factory for the wiretapDao -->
    <bean id="wiretapHibernateSessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="ikasanAdminNoTxDataSource" />
        <property name="mappingResources">
            <list>
                <value>WiretapEventImpl.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties" ref="platformHibernateProperties"/>
    </bean>

    <!-- Session Factory for the pointToPointFlowProfileDao -->
    <bean id="pointToPointFlowProfileHibernateSessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="ikasanAdminNoTxDataSource" />
        <property name="mappingResources">
            <list>
                <value>PointToPointFlowProfile.hbm.xml</value>
                <value>PointToPointFlow.hbm.xml</value>
                <value>Module.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties" ref="platformHibernateProperties"/>
    </bean>

    <!-- Session Factory for the moduleDao -->
    <bean id="moduleHibernateSessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="ikasanAdminNoTxDataSource" />
        <property name="mappingResources">
            <list>
                <value>Module.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties" ref="platformHibernateProperties"/>
    </bean>

    <bean id="initiatorStartupControlHibernateSessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <!-- TODO Temporary fix to needing an XA datasource that isn't actually used
             see IKASAN-317 -->
        <!-- <property name="dataSource" ref="ikasanAdminXaDataSource" /> -->
        <property name="dataSource" ref="ikasanAdminLocalTxDataSource" />
        <property name="mappingResources">
            <list>
                <value>org/ikasan/framework/initiator/InitiatorStartupControl.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties" ref="platformHibernateProperties"/>
    </bean>

</beans>
