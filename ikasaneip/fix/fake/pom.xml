<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.ikasan</groupId>
		<artifactId>ikasan-fix</artifactId>
		<version>1.2.0-SNAPSHOT</version>
	</parent>
	
	<groupId>org.ikasan</groupId>
	<artifactId>ikasan-fake-connector-fix</artifactId>
	<packaging>jar</packaging>
	<name>Ikasan FIX Connector Fake Acceptor Service</name>

	<!-- Config below is enable the fake acceptor application to run as a standalone app using the maven exec plugin  -->
	<!-- To run cd to the api directory and run the following command : -->
	<!-- mvn exec:java -Dexec.mainClass=org.ikasan.fake.api.connector.acceptor.FakeAcceptorClientAppTest-->
	<!-- the application class has been included in the test folders but will not run as part of the -->
	<!-- surefire or integration tests as it does not have the Test suffix in the classname -->

	<profiles>
		<profile>
			<id>AcceptorApp</id>
			<activation>
				<property>
					<name>AcceptorApp</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<executions>
							<execution>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<executable>java</executable>
							<mainClass>org.ikasan.fake.api.connector.acceptor.FakeAcceptorClientAppTest</mainClass>
							<arguments>
								<argument>-classpath</argument>
								<!-- automatically creates the classpath using all project dependencies,
                 also adding the project build directory -->
								<classpath />
								<argument>org.ikasan.fake.api.connector.acceptor.FakeAcceptorClientAppTest</argument>
							</arguments>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<!-- QuickFixJ libraries -->
		<dependency>
			<groupId>quickfixj</groupId>
			<artifactId>quickfixj-all</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.mina</groupId>
			<artifactId>mina-core</artifactId>
		</dependency>
		
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>

		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.jmock</groupId>
			<artifactId>jmock-junit4</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>