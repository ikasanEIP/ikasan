    <!-- Repositories required for Ikasan modules -->
    <repositories>
        <!-- Ikasan snapshot repo -->
        <repository>
            <id>ikasaneip-snapshots</id>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <!-- Ikasan release repo -->
        <repository>
            <id>ikasaneip-releases</id>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-releases/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <!-- TODO Check this We also rely on JBoss Maven repo for released artifacts -->
        <repository>
            <id>jboss-public-repository-group</id>
            <name>JBoss Public Maven Repository Group</name>
            <url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </repository>
    </repositories>
    <!-- Plugin repositories -->
