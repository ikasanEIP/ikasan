<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ikasan</groupId>
    <artifactId>ikasan-build</artifactId>
    <version>0.8.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Ikasan Build Project</name>
    <licenses>
        <license>
            <name>Modified BSD License</name>
            <url>http://www.ikasan.org/license</url>
            <distribution>manual</distribution>
        </license>
    </licenses>
    <mailingLists>
        <mailingList>
            <name>Ikasan Users</name>
            <subscribe>http://lists.sourceforge.net/lists/listinfo/ikasaneip-user</subscribe>
            <unsubscribe>http://lists.sourceforge.net/lists/listinfo/ikasaneip-user</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=ikasaneip-user</archive>
        </mailingList>
        <mailingList>
            <name>Ikasan Development</name>
            <subscribe>http://lists.sourceforge.net/lists/listinfo/ikasaneip-developer</subscribe>
            <unsubscribe>http://lists.sourceforge.net/lists/listinfo/ikasaneip-developer</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=ikasaneip-developer</archive>
        </mailingList>
        <mailingList>
            <name>Ikasan Announce</name>
            <subscribe>http://lists.sourceforge.net/lists/listinfo/ikasaneip-announce</subscribe>
            <unsubscribe>http://lists.sourceforge.net/lists/listinfo/ikasaneip-announce</unsubscribe>
            <archive>http://sourceforge.net/mailarchive/forum.php?forum=ikasaneip-announce</archive>
        </mailingList>
    </mailingLists>
    <issueManagement>
        <url>http://open.jira.com/browse/IKASAN</url>
    </issueManagement>

    <!-- Repositories required for Ikasan modules -->
    <repositories>
        <!-- Ikasan snapshot repo -->
        <repository>
            <id>ikasaneip-snapshots</id>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <!-- Ikasan release repo -->
        <repository>
            <id>ikasaneip-releases</id>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-releases/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <!-- We also rely on JBoss Maven repo for released artifacts -->
        <repository>
          <id>repository.jboss.org</id>
          <url>http://repository.jboss.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <!-- Right now we don't have any dependencies on JBoss snapshot repo
         Uncomment, if required later on
         <repository>
          <id>snapshots.jboss.org</id>
          <url>http://snapshots.jboss.org/maven2</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        -->
    </repositories>
    <!-- Plugin repositories -->
    <pluginRepositories>
        <!-- Ikasan snapshot repo for plugins -->
        <pluginRepository>
            <id>ikasaneip-snapshots</id>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
            <!-- Ikasan release repo for plugins -->
        <pluginRepository>
            <id>ikasaneip-releases</id>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-releases/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <!-- Used during releases -->
    <distributionManagement>
        <repository>
            <id>ikasaneip-releases</id>
            <name>Ikasan EIP Releases Repository</name>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-releases</url>
        </repository>
        <snapshotRepository>
            <id>ikasaneip-snapshots</id>
            <name>Ikasan EIP Snapshot Repository</name>
            <url>http://oss.sonatype.org/content/repositories/ikasaneip-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>


</project>

