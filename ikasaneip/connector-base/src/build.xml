<project default="build">

  <!-- =========================================== -->
  <!-- Inherit parent build                        -->
  <!-- =========================================== -->
  <import file="../build.xml" />

  <!-- =========================================== -->
  <!-- Module specific properties                  -->
  <!-- =========================================== -->
  <property name="src.conf.dir"         value="./conf" />
  <available file="${src.conf.dir}"     property="src.conf.dir.present" />
  <property name="src.java.dir"         value="./java" />
  <available file="${src.java.dir}"     property="src.java.dir.present" />
  <property name="src.database.dir"     value="./database" />
  <available file="${src.database.dir}" property="src.database.dir.present" />
  <property name="src.cronacle.dir"     value="./cronacle" />
  <available file="${src.cronacle.dir}" property="src.cronacle.dir.present" />
  <property name="src.bin.dir"          value="./bin" />
  <available file="${src.bin.dir}"      property="src.bin.dir.present" />

  <!-- =========================================== -->
  <!-- Public targets                              -->
  <!-- =========================================== -->
  <target name="build" depends="build.database, build.java, build.conf, build.cronacle, build.bin" />

  <!-- =========================================== -->
  <!-- Private targets                             -->
  <!-- =========================================== -->
  <target name="build.database" if="src.database.dir.present">
    <ant dir="${src.database.dir}" target="build" inheritall="false">
      <property name="build.dir" value="${build.dir}" />
    </ant>
  </target>

  <target name="build.java" if="src.java.dir.present">
    <ant dir="${src.java.dir}" target="build" inheritall="false">
      <property name="build.dir" value="${build.dir}" />
    </ant>
  </target>

  <target name="build.conf" if="src.conf.dir.present">
    <ant dir="${src.conf.dir}" target="build" inheritall="false">
      <property name="build.dir" value="${build.dir}" />
    </ant>
  </target>

  <target name="build.cronacle" if="src.cronacle.dir.present">
    <ant dir="${src.cronacle.dir}" target="build" inheritall="false">
      <property name="build.dir" value="${build.dir}" />
    </ant>
  </target>

  <target name="build.bin" if="src.bin.dir.present">
    <ant dir="${src.bin.dir}" target="build" inheritall="false">
      <property name="build.dir" value="${build.dir}" />
    </ant>
  </target>

</project>
