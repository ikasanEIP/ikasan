<!--  
    This is the hibernate mapping configuration for PointToPointFlow persistence.
    @author Ikasan Development Team 
 -->
<hibernate-mapping>
 
    <class
        name="org.ikasan.console.pointtopointflow.PointToPointFlow"
        table="PointToPointFlow">

        <id name="id" type="java.lang.Long" column="Id">
            <generator class="identity" />
        </id>

        <many-to-one name="pointToPointFlowProfile" column="PointToPointFlowProfileId" />
        
        <many-to-one name="fromModule" class="org.ikasan.console.module.Module" lazy="false" column="FromModuleId" />

        <many-to-one name="toModule" class="org.ikasan.console.module.Module" lazy="false" column="ToModuleId" />
       
    </class>
	
</hibernate-mapping>
