					<filtering>true</filtering>
                    <!-- <filters>
                        <filter>${basedir}/../../project.properties</filter>
                        <filter>${basedir}/../module.properties</filter>
                    </filters>-->



			          <jboss>
			            <version>4.2</version>
			            <data-sources>
			              <data-source>demoFileDelivery-ftp-cf-ds.xml</data-source>
			            </data-sources>
			            <loader-repository>org.ikasan:archive=${project.artifactId}-${project.version}.ear</loader-repository>
			            <loader-repository-config>java2ParentDelegation=false</loader-repository-config>
			          </jboss>
