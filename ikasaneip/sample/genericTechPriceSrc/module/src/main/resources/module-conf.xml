<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean id="module" class="org.ikasan.builder.ModuleFactory">
        <property name="name"           value="genericTech-priceSrc" />
        <property name="description"    value="Sample showing a simple module creation based on a generic EIS technology providing price ticks." />
        <property name="flows">
            <util:list>
                <ref bean="priceConverterFlow" />
            </util:list>
        </property>
	</bean>

</beans>