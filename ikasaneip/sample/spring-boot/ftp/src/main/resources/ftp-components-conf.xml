<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!--  ================================================================== -->
    <!--  component implementations                                          -->
    <!--  ================================================================== -->

    <bean id="ftpConsumer" class="org.ikasan.component.endpoint.quartz.consumer.ScheduledConsumer">
        <constructor-arg ref="scheduler"/>
        <property name="messageProvider" ref="ftpMessageProvider"/>
        <property name="jobDetail">
            <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
                <property name="targetObject" ref="scheduledJobFactory"/>
                <property name="targetMethod" value="createJobDetail"/>
                <property name="arguments">
                    <list>
                        <ref bean="ftpConsumer"/>
                        <value type="java.lang.Class">
                            org.ikasan.component.endpoint.quartz.consumer.ScheduledConsumer
                        </value>
                        <value>ftpConsumer</value>
                        <value>ftpToLogFlow</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="configuration" ref="ftpConsumerConfiguration"/>
        <property name="configuredResourceId" value="ftpConsumer"/>
    </bean>

    <bean id="ftpConsumerConfiguration" class="org.ikasan.endpoint.ftp.consumer.FtpConsumerConfiguration">
        <property name="cronExpression" value="${ftp.consumer.cronExpression}"/>
        <property name="clientID" value="${ftp.consumer.clientID}"/>
        <property name="username" value="${ftp.consumer.username}"/>
        <property name="password" value="${ftp.consumer.password}"/>
        <property name="remoteHost" value="${ftp.consumer.remoteHost}"/>
        <property name="remotePort" value="${ftp.consumer.remotePort}"/>
        <property name="sourceDirectory" value="${ftp.consumer.sourceDirectory}"/>
        <property name="filenamePattern" value="${ftp.consumer.filenamePattern}"/>
        <property name="chronological" value="true"/>
        <property name="cleanupJournalOnComplete" value="false"/>
        <property name="ageOfFiles" value="30"/>
        <property name="minAge" value="1"/>
        <property name="filterOnLastModifiedDate" value="true"/>
        <property name="renameOnSuccess" value="false"/>
        <property name="renameOnSuccessExtension" value=".tmp"/>
        <property name="destructive" value="false"/>
        <property name="chunking" value="false"/>
    </bean>

    <bean id="fileBasedPasswordHelper" class="org.ikasan.endpoint.ftp.util.FileBasedPasswordHelper"></bean>

    <bean id="ftpMessageProvider" class="org.ikasan.endpoint.ftp.consumer.FtpMessageProvider">
        <property name="configuration" ref="ftpConsumerConfiguration"/>
        <constructor-arg name="fileBasedPasswordHelper" ref="fileBasedPasswordHelper"/>
        <constructor-arg name="fileChunkDao" ref="fileChunkDao"/>
        <constructor-arg name="transactionalResourceCommandDAO" ref="transactionalResourceCommandDAO"/>
        <constructor-arg name="baseFileTransferDao" ref="baseFileTransferDao"/>
        <constructor-arg name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="payloadToStringConverter" class="org.ikasan.sample.converter.PayloadToStringConverter"/>

    <bean id="filePayloadGeneratorConverter" class="org.ikasan.sample.converter.FilePayloadGeneratorConverter"/>

    <bean id="fileGeneratorScheduledConsumer" class="org.ikasan.component.endpoint.quartz.consumer.ScheduledConsumer">
        <constructor-arg ref="scheduler"/>
        <property name="jobDetail">
            <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
                <property name="targetObject" ref="scheduledJobFactory"/>
                <property name="targetMethod" value="createJobDetail"/>
                <property name="arguments">
                    <list>
                        <ref bean="fileGeneratorScheduledConsumer"/>
                        <value type="java.lang.Class">
                            org.ikasan.component.endpoint.quartz.consumer.ScheduledConsumer
                        </value>
                        <value>fileGeneratorScheduledConsumer</value>
                        <value>timeGeneratorToFtpFlow</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="configuration" ref="fileGeneratorScheduledConsumerConfiguration"/>
        <property name="configuredResourceId" value="fileGeneratorScheduledConsumer"/>
    </bean>

    <bean id="fileGeneratorScheduledConsumerConfiguration" class="org.ikasan.component.endpoint.quartz.consumer.ScheduledConsumerConfiguration">
        <property name="cronExpression" value="${fileGenerator.consumer.cronExpression}"/>
    </bean>

    <bean id="ftpProducer" class="org.ikasan.endpoint.ftp.producer.FtpProducer">
        <constructor-arg name="fileChunkDao" ref="fileChunkDao"/>
        <constructor-arg name="transactionalResourceCommandDAO" ref="transactionalResourceCommandDAO"/>
        <constructor-arg name="baseFileTransferDao" ref="baseFileTransferDao"/>
        <constructor-arg name="transactionManager" ref="transactionManager"/>

        <property name="configuration" ref="ftpProducerConfiguration"/>
        <property name="configuredResourceId" value="ftpProducerConfiguration"/>
    </bean>

    <bean id="ftpProducerConfiguration" class="org.ikasan.endpoint.ftp.producer.FtpProducerConfiguration">
        <property name="clientID" value="${ftp.producer.clientID}"/>
        <property name="username" value="${ftp.producer.username}"/>
        <property name="password" value="${ftp.producer.password}"/>
        <property name="remoteHost" value="${ftp.producer.remoteHost}"/>
        <property name="remotePort" value="${ftp.producer.remotePort}"/>
        <property name="outputDirectory" value="${ftp.producer.outputDirectory}"/>
        <property name="cleanupJournalOnComplete" value="false"/>
        <property name="overwrite" value="true"/>
    </bean>

</beans>