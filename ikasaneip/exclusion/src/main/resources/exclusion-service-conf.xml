<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="exclusionServiceFactory" class="org.ikasan.exclusion.service.ExclusionServiceFactory">
        <constructor-arg ref="exclusionServiceDao"/>
    </bean>

    <bean id="exclusionServiceDao" class="org.ikasan.exclusion.dao.ListExclusionServiceDao">
        <constructor-arg>
            <bean class="org.ikasan.exclusion.model.BlackListLinkedHashMap">
                <constructor-arg value="25"/>  <!-- default max entries size -->
            </bean>
        </constructor-arg>
    </bean>

</beans>