<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- mockery interfaces -->
    <bean id="mockery" class="org.jmock.Mockery" >
        <property name="imposteriser" >
            <bean class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
                <property name="staticField" value="org.jmock.lib.legacy.ClassImposteriser.INSTANCE"/>
            </bean>
        </property>
    </bean>

    <!--bean id="serialiserFactory" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="mockery" />
        <property name="targetMethod" value="mock" />
        <property name="arguments">
            <list>
                <value>org.ikasan.spec.serialiser.SerialiserFactory</value>
            </list>
        </property>
    </bean-->

    <bean id="serialiser" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="mockery" />
        <property name="targetMethod" value="mock" />
        <property name="arguments">
            <list>
                <value>org.ikasan.spec.serialiser.Serialiser</value>
            </list>
        </property>
    </bean>


</beans>