<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">
       
       <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		    <property name="sessionFactory">
		        <ref bean="errorReportingSessionFactory"/>
		    </property>
		</bean>

    <bean id="ikasanSerialiserFactory" class="org.ikasan.serialiser.service.SerialiserFactoryKryoImpl">
        <constructor-arg name="serializers">
            <map>
            </map>
        </constructor-arg>
        <constructor-arg name="converters">
            <map>
                <entry key="javax.jms.TextMessage">
                    <bean class="org.ikasan.serialiser.converter.JmsTextMessageConverter"/>
                </entry>
                <entry key="javax.jms.MapMessage">
                    <bean class="org.ikasan.serialiser.converter.JmsMapMessageConverter"/>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <aop:config>
            <aop:pointcut id="daoMethods" expression="execution(* org.ikasan.error.reporting.dao.ErrorReportingServiceDao.*(..))"/>
            <aop:pointcut id="serviceMethods" expression="execution(* org.ikasan.spec.error.reporting.ErrorReportingService.*(..))"/>

            <aop:advisor advice-ref="requiresNew-TransactionAdvice" pointcut-ref="daoMethods"/>
            <aop:advisor advice-ref="requiresNew-TransactionAdvice" pointcut-ref="serviceMethods"/>
	    </aop:config>
	
	    <tx:advice id="requiresNew-TransactionAdvice" transaction-manager="transactionManager">
	        <tx:attributes>
	            <tx:method name="*" propagation="REQUIRES_NEW"/>
	        </tx:attributes>
	    </tx:advice>

</beans>