<exceptionResolver
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://@XML_REMOTE_SVCNAME@:@XML_REMOTE_PORT@/ikasan/framework/conf/exceptionResolver_1_0.xsd">

  <componentGroup MAJOR_CODE="1000" EXT1_MAJOR_CODE="101000">
    <component NAME="*">

      <!-- Catch all other exceptions -->
      <exception
        CLASS="*"
        ACTION="STOP"
        EXT1_USER_ACTION="RETRY"
        MINOR_CODE="999"
        EXT1_MINOR_CODE="1999"
        PUBLISH="true"
        DROP_DUPLICATE="false"
        DROP_DUPLICATE_PERIOD="10000"
        DESCRIPTION="base exception definition"  />

    </component>

  </componentGroup>

</exceptionResolver>

