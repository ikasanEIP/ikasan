<!--  
    This is the hibernate mapping configuration for wiretapEvent persistence.
    @author Ikasan Development Team 
 -->
<hibernate-mapping>
	 
	<class
		name="org.ikasan.framework.event.wiretap.model.WiretapEvent"
		table="IkasanWiretap">

        <id name="id" type="java.lang.Long" column="Id">
            <generator class="identity" />
        </id>
		
        <property name="moduleName"        type="java.lang.String" 
                  column="ModuleName"      not-null="true" />
        <property name="flowName"          type="java.lang.String" 
                  column="FlowName"        not-null="true" />
        <property name="componentName"     type="java.lang.String" 
                  column="ComponentName"   not-null="true" />
        <property name="eventId"           type="java.lang.String" 
                  column="EventId"         not-null="true" />
        <property name="payloadId"         type="java.lang.String" 
                  column="PayloadId"       not-null="true" />
        <property name="payloadContent"    type="java.lang.String" 
                  column="PayloadContent"  not-null="true" />
        <property name="created"           type="java.util.Date" 
                  column="CreatedDateTime" not-null="true" />
        <property name="updated"           type="java.util.Date" 
                  column="UpdatedDateTime" not-null="true" />
        <property name="expiry"           type="java.util.Date" 
                  column="Expiry" 		  not-null="true" />

	</class>
	
</hibernate-mapping>
