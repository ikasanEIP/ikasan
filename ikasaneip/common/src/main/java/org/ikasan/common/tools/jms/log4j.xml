  <!-- ================================================ -->
  <!-- Setup the Root category                          -->
  <!-- ================================================ -->
  <category name="org.jboss.serial">
    <priority value="INFO"/>
  </category>

  <root>
    <appender-ref ref="CONSOLE"/>
  </root>

