<MonitorConfig>
    <ServerInstance id="${monitor.bb.server.id}" name="${monitor.bb.server.name}" port="${monitor.bb.server.port}" enabled="true" critical="true" version="eap-4.3" flow="Flows">
        <Time>* * * * * ?</Time>
        <Project name="cmi2">
        <ComponentGroup name="blbgToms/mhiTradeFeedSrc" enabled="true">
            <Component name="primaryInitiator" enabled="true" critical="false">
                <Time>* * * * * ?</Time>
            </Component>
            <Component name="secondaryInitiator" enabled="true" critical="false">
                <Time>* * * * * ?</Time>
            </Component>
            <Component name="filteringInitiator" enabled="true" critical="false">
                <Time>* * * * * ?</Time>
            </Component>
            <Component name="transformationInitiator" enabled="true" critical="false">
                <Time>* * * * * ?</Time>
            </Component>
        </ComponentGroup>
        </Project>
    </ServerInstance>

    <!--  TODO add other initiators -->
</MonitorConfig>