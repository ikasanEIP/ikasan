<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">

	<bean id="persistanceSetupNavigator" class="org.ikasan.dashboard.ui.framework.navigation.IkasanUINavigator" scope="session">
		<constructor-arg value="persistanceSetup"/>
        <constructor-arg>
            <list>
            	<bean class="org.ikasan.dashboard.ui.framework.display.IkasanUIView" scope="session">
                   <constructor-arg value=""/>
                   <constructor-arg ref="emptyPanel"/>
                </bean>
                <bean class="org.ikasan.dashboard.ui.framework.display.IkasanUIView" scope="session">
                   <constructor-arg value="emptyPanel"/>
                   <constructor-arg ref="emptyPanel"/>
                </bean>
                <bean class="org.ikasan.dashboard.ui.framework.display.IkasanUIView" scope="session">
                   <constructor-arg value="persistanceSetupPanel"/>
                   <constructor-arg ref="persistanceSetupPanel"/>
                </bean>
            </list>
        </constructor-arg>
        <constructor-arg ref="persistanceSetupComponentContainer"/>
    </bean>
    
    <bean id="persistanceSetupPanel" class="org.ikasan.dashboard.ui.framework.panel.PersistanceSetupPanel" scope="session">
    	<constructor-arg ref="persistenceService"/>
    	<constructor-arg ref="userService"/>
    	<constructor-arg ref="authenticationService"/>
		<constructor-arg ref="configurationService"/>
    </bean> 

	<bean id="persistanceSetupComponentContainer" class="org.ikasan.dashboard.ui.framework.display.ViewComponentContainer" scope="session">
		<constructor-arg value="false"/>
    </bean>

</beans>