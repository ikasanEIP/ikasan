<assembly>
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <moduleSets>
        <moduleSet>
            <includes>
                <include>com.mizuho.cmi2.mappingConfigurationUI:mappingConfigurationUI-war</include>
            </includes>
            <binaries>
                <outputDirectory>/server/platform/deploy</outputDirectory>
                <unpack>false</unpack>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>

    <files>
        <file>
            <source>conf/environmentalisation.xml</source>
            <outputDirectory>/modules/com/mizuho/mappingConfigurationUI/conf/main</outputDirectory>
            <filtered>true</filtered>
            <destName>mappingConfigurationUI-environmentalisation.xml</destName>
        </file>

        <file>
            <source>conf/log4j.xml</source>
            <outputDirectory>/modules/com/mizuho/mappingConfigurationUI/conf/main</outputDirectory>
            <filtered>true</filtered>
        </file>

		<file>
            <source>conf/module.xml</source>
            <outputDirectory>/modules/com/mizuho/mappingConfigurationUI/conf/main</outputDirectory>
            <filtered>true</filtered>
        </file>

        <file>
            <source>conf/ikasan-hibernate.properties</source>
            <outputDirectory>/modules/com/mizuho/mappingConfigurationUI/conf/main</outputDirectory>
            <filtered>ikasan-hibernate.properties</filtered>
        </file>

    </files>
</assembly>
