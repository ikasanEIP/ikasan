<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  
    <class name="com.ikasan.sample.person.model.Person" table="Person">

        <id name="id" type="long" column="Id">
            <generator class="assigned" />
        </id>

        <property name="name"    type="java.lang.String"
                  column="Name"  not-null="false" />

        <property name="dobDayOfMonth"    type="int"
                  column="DobDayOfMonth"  not-null="false" />

        <property name="dobMonthOfYear"    type="int"
                  column="DobMonthOfYear"  not-null="false" />

        <property name="dobYear"    type="int"
                  column="DobYear"  not-null="false" />

    </class>

</hibernate-mapping>
