<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>${buildParentGroupId}</groupId>
        <artifactId>${buildParentArtifactId}</artifactId>
        <version>${buildParentVersion}</version>
        <relativePath/>
    </parent>

    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <packaging>jar</packaging>
    <version>${version}</version>
    <name>${artifactId} Integration Module</name>
    <description>Describe the purpose of this Integration Module</description>

    <dependencies>
        <!-- Ikasan EIP Engine -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-eip</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Optional component implementing default multi-recipient router behaviour -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-component-multiRecipient-router</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Optional component implementing default splitter behaviour -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-component-splitter</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Default builder uses Spring builder -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-builder-spring</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Default component scheduler implementation behaviour -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-scheduler</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-quartz-endpoint</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>geronimo-spec</groupId>
            <artifactId>geronimo-spec-j2ee</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Default test dependencies -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-eip-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-monitor</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jmock</groupId>
            <artifactId>jmock-legacy</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

</project>
