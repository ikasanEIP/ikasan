<hibernate-mapping  default-access="field">

<class name="org.ikasan.common.component.DefaultPayload" table="EXCLUDED_PAYLOAD" mutable="false">

	<!-- Common id property. -->
	<id name="persistenceId" type="long" column="PERSISTENCE_ID">
		<generator class="identity"/>
	</id>
	<property name="id" column="PAYLOAD_ID"/>
	<property name="content" column="CONTENT"/>
	<property name="spec" column="SPEC"/>
	<property name="srcSystem" column="SRC_SYSTEM"/>



</class>

</hibernate-mapping>