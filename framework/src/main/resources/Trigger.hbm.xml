<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	 
	<class
		name="org.ikasan.framework.flow.event.model.Trigger"
		table="FlowEventTrigger">

        <id name="id" type="java.lang.Long" column="Id">
            <generator class="identity" />
        </id>
		
        <property name="moduleName"        type="java.lang.String" 
                  column="ModuleName"      not-null="true" />
        <property name="flowName"          type="java.lang.String" 
                  column="FlowName"        not-null="true" />
        <property name="relationshipDescription"      type="java.lang.String" 
                  column="Relationship"    not-null="true" />
        <property name="flowElementName"     type="java.lang.String" 
                  column="FlowElementName" />
        <property name="jobName"         type="java.lang.String" 
                  column="JobName"       not-null="true" />
        
        <map name="params" table="FlowEventTriggerParameters" lazy="false">
        	<key column="TriggerId"/>
        	<map-key column="ParamName" type="java.lang.String"/>
        	<element column="ParamValue" type="java.lang.String"/>
        </map>

	</class>
	
</hibernate-mapping>
