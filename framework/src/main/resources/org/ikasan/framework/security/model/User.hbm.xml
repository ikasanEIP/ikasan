<!--
 *
 * Purpose: User table hibernate mapping file.
 *
 * 
 *
-->
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.ikasan.framework.security.model.User" table="Users">
    <id name="id" type="java.lang.Long" column="Id">
        <generator class="identity" />
    </id>
    <property name="username" type="java.lang.String" column="Username" unique="true"/>
    <property name="password" column="Password" type="java.lang.String" not-null="true"/>
    <property name="enabled" column="Enabled" type="boolean" not-null="true"/>
    <set name="grantedAuthorities" lazy="false" table="UsersAuthorities">
        <key column="UserId"/>
        <many-to-many class="org.ikasan.framework.security.model.Authority" column="AuthorityId"  />
    </set>
  </class>
</hibernate-mapping>