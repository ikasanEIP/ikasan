<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ikasan</groupId>
	<artifactId>ikasan-project</artifactId>
	<version>1.0</version>
	<packaging>pom</packaging>

	<name>Ikasan Projects Parent Project</name>

	<profiles>

		<profile>
			<id>deliverables</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<!--
					gotta keep the order correct here, dependent projects first, not
					alphebetical!
				-->
				<!-- ikasan core -->
				<module>common</module>
				<module>framework</module>

				<!-- consoles -->
				<module>webconsole</module>
				<module>console</module>

				<!-- connectors -->
				<module>connector-base</module>
				<module>connector-basefiletransfer</module>
				<module>connector-filetransfer-parent</module>
				<module>connector-ftpRar</module>
				<module>connector-sftpRar</module>

				<!-- connector clients -->
				<module>client-connection</module>
				<module>client-filetransfer</module>

				<!-- documentation  -->
				<!-- <module>documentation/ArchitectureGuide</module> -->
				<!-- <module>documentation/ReferenceGuide</module> -->
			</modules>
		</profile>


		<profile>
			<!-- to avoid building samples, run "mvn clean install -P!samples" -->
			<id>samples</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>

				<module>samples/DemoFileDelivery</module>
				<module>samples/DemoResubmission</module>
			</modules>
		</profile>

	</profiles>
</project>