<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ikasan</groupId>
    <artifactId>ikasan-project</artifactId>
    <version>0.8.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Ikasan Projects Parent Project</name>

    <modules>
        <!--
            You have to keep the order correct here, dependent projects first, not alphabetical!
        -->
        <!--
             The build module acts the parent of the rest of the modules,
             controlling the repos, dependencies etc.
         -->
        <module>build</module>

        <!-- ikasan core -->
        <module>common</module>
        <module>platform</module>
        <module>framework</module>

        <!-- consoles -->
        <module>webconsole</module>
        <module>console</module>

        <!-- connectors  -->
        <module>connector-base</module>
        <module>connector-basefiletransfer</module>
        <module>connector-filetransfer-parent</module>
        <module>connector-ftpRar</module>
        <module>connector-sftpRar</module>

        <!-- connector clients -->
        <module>client-connection</module>
        <module>client-filetransfer</module>

        <!-- samples -->
        <module>samples/DemoFileDelivery</module>
        <module>samples/DemoTransformationRouting</module>
        <module>samples/DemoResubmission</module>
        <module>samples/DemoErrorPublication</module>

        <!-- documentation -->
        <module>documentation</module>
    </modules>

</project>

