 <project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ikasan</groupId>
        <artifactId>ikasan-build</artifactId>
        <version>0.8.1</version>
    </parent>
    <artifactId>ikasan-connector-sftp-classes</artifactId>
    <version>0.8.1</version>  
    <packaging>jar</packaging>
    <name>Connector SFTP Classes</name>

    <dependencies>
        <!-- 
            TODO:  Should be able to haul this up one level
            Used for the common connector functionality for the ikasan platform 
         -->
        <!-- Used for the common functionality for the ikasan platform, e.g. Ikasan Exceptions -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-common</artifactId>
            <version>0.8.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-connector-base</artifactId>
            <version>0.8.1</version>
        </dependency>
        <!-- Used for the common filetransfer connector functionality for the ikasan platform -->
        <dependency>
            <groupId>org.ikasan</groupId>
            <artifactId>ikasan-connector-basefiletransfer</artifactId>
            <version>0.8.1</version>
        </dependency>
        <!-- J2EE -->
        <dependency>
            <groupId>geronimo-spec</groupId>
            <artifactId>geronimo-spec-j2ee</artifactId>
            <version>1.4-rc3</version>
            <scope>provided</scope>
        </dependency>
        <!-- The SFTP library -->
        <dependency>
            <groupId>com.jcraft</groupId>
            <artifactId>jsch</artifactId>
            <version>0.1.42</version>
        </dependency>
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
            <version>2.2</version>
        </dependency>
        
        <!-- For persisting information about the connector such as chunking large messages -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>3.5.4-Final</version>
            <scope>provided</scope>
            <exclusions>
                <exclusion>
                    <groupId>javax.transaction</groupId>
                    <artifactId>jta</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!-- TODO This is provided by the base connector, we should not declare it here? -->
        <!-- TODO One day remove dependency on JBoss/Arjuna. But for now it's used for LRCO txns -->
        <dependency>
            <groupId>org.jboss.transaction</groupId>
            <artifactId>jboss-jta</artifactId>
            <version>4.2.3.SP7</version>
            <scope>provided</scope>
        </dependency>
        
    </dependencies>

</project>
