					<modules>

						<!-- web module so that the web application is started -->
						<webModule>
							<groupId>org.ikasan.demo</groupId>
							<artifactId>demoTransformationRouting-war</artifactId>
							<contextRoot>/demoTransformationRouting</contextRoot>
						</webModule>

						<!--jars required by the web app -->
