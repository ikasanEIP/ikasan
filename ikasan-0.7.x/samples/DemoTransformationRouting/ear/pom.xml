						</jarModule>
						<jarModule>
							<groupId>ognl</groupId>
							<artifactId>ognl</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
                        <jarModule>
                            <groupId>aspectj</groupId>
                            <artifactId>aspectjweaver</artifactId>
                            <bundleDir>lib</bundleDir>
                        </jarModule>
                        <jarModule>
							<groupId>quartz</groupId>
							<artifactId>quartz</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						<jarModule>
			      		  <groupId>commons-lang</groupId>
			      		  <artifactId>commons-lang</artifactId>
			              <bundleDir>lib</bundleDir>
			            </jarModule>

						<!--
							module config files must be in the lib dir for the web app to do
							anything
						-->
						<javaModule>
							<groupId>org.ikasan.demo</groupId>
							<artifactId>demoTransformationRouting-japaneseWordSrc-jar</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.ikasan.demo</groupId>
							<artifactId>demoTransformationRouting-germanWordSrc-jar</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
