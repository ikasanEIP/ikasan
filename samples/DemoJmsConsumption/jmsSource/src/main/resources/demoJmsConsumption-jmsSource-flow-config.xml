<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">


	<bean id="moduleName" class="java.lang.String">
		<constructor-arg value="${project.name}-${module.name}" />
	</bean>
	
    <bean id="loggingExceptionHandler" class="org.ikasan.framework.component.LoggingExceptionHandlerImpl">
            <property name="errorAction">
                <bean class="org.ikasan.framework.exception.IkasanExceptionActionImpl">
                    <constructor-arg value="ROLLBACK_RETRY" />
                    <constructor-arg value="10000" />
                    <constructor-arg value="10" />
                </bean>
            </property>
        </bean>


	<bean id="flowElementInvoker"
		class="org.ikasan.framework.flow.invoker.VisitingFlowElementInvoker">
		<!-- <constructor-arg ref="exceptionHandler" />-->
		<constructor-arg ref="loggingExceptionHandler"/>

		<property name="flowEventListener" ref="flowEventListener" />
	</bean>



	<!-- rawMessageFlow -->


	<bean id="rawMessageFlow" class="org.ikasan.framework.flow.VisitingInvokerFlow">
		<constructor-arg value="rawMessageFlow" />
		<constructor-arg ref="moduleName" />
		<constructor-arg ref="privateChannelPublishingElement" />
		<constructor-arg ref="flowElementInvoker" />

	</bean>


    <bean id="privateChannelPublishingElement" class="org.ikasan.framework.flow.FlowElementImpl">
        <constructor-arg value="privateChannelPublishingStep" />
        <constructor-arg ref="privateChannelPublishingEndpoint" />
        <property name="description">
          <value>Publishes the message to a private channel</value>
        </property>
    </bean>
    
    
   	<!-- innerFlow -->


	<bean id="innerFlow" class="org.ikasan.framework.flow.VisitingInvokerFlow">
		<constructor-arg value="innerFlow" />
		<constructor-arg ref="moduleName" />
		<constructor-arg ref="publicChannelPublishingElement" />
		<constructor-arg ref="flowElementInvoker" />

	</bean>


    <bean id="publicChannelPublishingElement" class="org.ikasan.framework.flow.FlowElementImpl">
        <constructor-arg value="publicChannelPublishingStep" />
        <constructor-arg ref="publicChannelPublishingEndpoint" />
        <property name="description">
          <value>Publishes the message to a public channel</value>
        </property>
    </bean> 
	


</beans>