<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">


	<bean id="moduleName" class="java.lang.String">
		<constructor-arg value="${module.name}" />
	</bean>
	
    <bean id="loggingExceptionHandler" class="org.ikasan.framework.component.LoggingExceptionHandlerImpl">
            <property name="errorAction">
                <bean class="org.ikasan.framework.exception.IkasanExceptionActionImpl">
                    <constructor-arg value="ROLLBACK_RETRY" />
                    <constructor-arg value="10000" />
                    <constructor-arg value="10" />
                </bean>
            </property>
        </bean>


	<bean id="flowElementInvoker"
		class="org.ikasan.framework.flow.invoker.VisitingFlowElementInvoker">
		<property name="flowEventListener" ref="flowEventListener" />
		<constructor-arg ref="loggingExceptionHandler"/>
	</bean>


	
	
	<!-- router flow -->
    
    <bean id="routerFlow" class="org.ikasan.framework.flow.VisitingInvokerFlow">
        <constructor-arg value="routerFlow" />
        <constructor-arg ref="moduleName" />
        <constructor-arg ref="wordTypeRouterElement" />
        <constructor-arg ref="flowElementInvoker" />

    </bean>
	

	<bean id="wordTypeRouterElement" class="org.ikasan.framework.flow.FlowElementImpl">
		<constructor-arg value="wordTypeRoutingStep" />
		<constructor-arg ref="wordTypeRouter" />
		<constructor-arg>
			<map>
				<entry key="colour" value-ref="englishColourPublishingElement" />
				<entry key="number" value-ref="englishNumberPublishingElement" />
			</map>
		</constructor-arg>
		<property name="description">
          <value>Routes words by their type. Supported types are colours and numbers</value>
        </property>
	</bean>


	<bean id="englishColourPublishingElement" class="org.ikasan.framework.flow.FlowElementImpl">
		<constructor-arg value="englishColourPublishingStep" />
		<constructor-arg ref="englishColourPublishingEndpoint" />
        <property name="description">
          <value>Publishes english colour words</value>
        </property>
	</bean>

	<bean id="englishNumberPublishingElement" class="org.ikasan.framework.flow.FlowElementImpl">
		<constructor-arg value="englishNumberPublishingStep" />
		<constructor-arg ref="englishNumberPublishingEndpoint" />
        <property name="description">
          <value>Publishes english number words</value>
        </property>
	</bean>



</beans>