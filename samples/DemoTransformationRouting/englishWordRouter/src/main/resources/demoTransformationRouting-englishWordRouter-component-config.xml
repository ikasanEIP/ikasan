<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">


	
	
	<bean id="wordTypeRouter"
		class="org.ikasan.demo.WordDictionaryRouter">
		<constructor-arg>
			<map>
				<entry key="one" value="number" />
				<entry key="two" value="number" />
				<entry key="three" value="number" />
				<entry key="four" value="number" />
				<entry key="five" value="number" />
				<entry key="six" value="number" />
				<entry key="seven" value="number" />
				<entry key="eight" value="number" />
				<entry key="nine" value="number" />
				<entry key="ten" value="number" />
				
				<entry key="green" value="colour" />
				<entry key="blue" value="colour" />
				<entry key="red" value="colour" />
				<entry key="brown" value="colour" />
				<entry key="orange" value="colour" />
				<entry key="yellow" value="colour" />
				<entry key="white" value="colour" />
				<entry key="grey" value="colour" />
				<entry key="black" value="colour" />
				<entry key="purple" value="colour" />
			</map>
		</constructor-arg>
	</bean>



	<bean id="englishColourPublishingEndpoint"
        class="org.ikasan.framework.component.endpoint.PluginEndpointAdapter">
        <constructor-arg>
            <bean class="org.ikasan.framework.plugins.JMSEventPublisherPlugin">
                <constructor-arg ref="englishColourTopic" />
                <constructor-arg ref="jmsConnectionFactory" />
                <constructor-arg ref="jmsMessageEventSerialiser" />
                <constructor-arg><null/></constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
		
	<bean id="englishNumberPublishingEndpoint"
        class="org.ikasan.framework.component.endpoint.PluginEndpointAdapter">
        <constructor-arg>
            <bean class="org.ikasan.framework.plugins.JMSEventPublisherPlugin">
                <constructor-arg ref="englishNumberTopic" />
                <constructor-arg ref="jmsConnectionFactory" />
                <constructor-arg ref="jmsMessageEventSerialiser" />
                <constructor-arg><null/></constructor-arg>
            </bean>
        </constructor-arg>
    </bean>


</beans>