<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">


	<bean id="germanWordEventProvider"
		class="org.ikasan.framework.event.service.SinglePayloadPerEventProvider">
		<constructor-arg>
			<bean id="germanWordPayloadProvider"
				class="org.ikasan.demo.RandomWordPayloadProvider">
				<constructor-arg>
					<list>
						<value>eins</value>
						<value>zwei</value>
						<value>drei</value>
						<value>vier</value>
						<value>funf</value>
						<value>sechs</value>
						<value>sieben</value>
						<value>acht</value>
						<value>neun</value>
						<value>zehn</value>
						<value>grun</value>
						<value>blau</value>
						<value>rot</value>
						<value>braun</value>
						<value>orange</value>
						<value>gelb</value>
						<value>whiet</value>
						<value>grau</value>
						<value>schwarz</value>
						<value>violett</value>
					</list>
				</constructor-arg>
				<constructor-arg ref="payloadFactory" />
			</bean>
		</constructor-arg>
		<constructor-arg value="someModuleName"/>
		<constructor-arg value="someComponentName"/>
		
	</bean>


    <bean id="germanWordPublishingEndpoint"
        class="org.ikasan.framework.component.endpoint.PluginEndpointAdapter">
        <constructor-arg>
            <bean class="org.ikasan.framework.plugins.JMSEventPublisherPlugin">
                <constructor-arg ref="germanWordTopic" />
                <constructor-arg ref="jmsConnectionFactory" />
                <constructor-arg ref="jmsMessageEventSerialiser" />
                <constructor-arg><null/></constructor-arg>
            </bean>
        </constructor-arg>
    </bean>


	<!-- FlowComponents -->
	<bean id="germanToEnglishWordTransformer"
		class="org.ikasan.demo.WordDictionaryTransformer">
		<constructor-arg>
			<map>
				<entry key="eins" value="one" />
				<entry key="zwei" value="two" />
				<entry key="drei" value="three" />
				<entry key="vier" value="four" />
				<entry key="funf" value="five" />
				<entry key="sechs" value="six" />
				<entry key="sieben" value="seven" />
				<entry key="acht" value="eight" />
				<entry key="neun" value="nine" />
				<entry key="zehn" value="ten" />
				
				<entry key="grun" value="green" />
				<entry key="blau" value="blue" />
				<entry key="rot" value="red" />
				<entry key="braun" value="brown" />
				<entry key="orange" value="orange" />
				<entry key="gelb" value="yellow" />
				<entry key="whiet" value="white" />
				<entry key="grau" value="grey" />
				<entry key="schwarz" value="black" />
				<entry key="violett" value="purple" />
			</map>
		</constructor-arg>
	</bean>
	
	


    <bean id="englishWordPublishingEndpoint"
        class="org.ikasan.framework.component.endpoint.PluginEndpointAdapter">
        <constructor-arg>
            <bean class="org.ikasan.framework.plugins.JMSEventPublisherPlugin">
                <constructor-arg ref="englishWordTopic" />
                <constructor-arg ref="jmsConnectionFactory" />
                <constructor-arg ref="jmsMessageEventSerialiser" />
                <constructor-arg><null/></constructor-arg>
            </bean>
        </constructor-arg>
    </bean>



	


</beans>