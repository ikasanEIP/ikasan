			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<filtering>true</filtering>
                    <!-- <filters>
                        <filter>${basedir}/../../project.properties</filter>
                        <filter>${basedir}/../module.properties</filter>
                    </filters>-->



			          <jboss>
			            <version>4.2</version>
			            <data-sources>
