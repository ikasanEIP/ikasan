<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.ikasan.demo</groupId>
		<artifactId>demoFileDelivery-parent</artifactId>
		<version>0.16.2-SNAPSHOT</version>
	</parent>
	<artifactId>demoFileDelivery-app</artifactId>
	<packaging>ear</packaging>

	<name>demoFileDelivery :: demoFileDelivery : ear</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<modules>

						<!-- web module so that the web application is started -->
						<webModule>
							<groupId>org.ikasan.demo</groupId>
							<artifactId>demoFileDelivery-app-war</artifactId>
							<contextRoot>/demoFileDelivery</contextRoot>
						</webModule>

						<rarModule>
							<groupId>org.ikasan</groupId>
							<artifactId>ikasan-connector-ftp</artifactId>
						</rarModule>
						<javaModule>
							<groupId>junit</groupId>  <!-- this is a dummy to force the reference of the cf-ds in generated application.xml -->
							<artifactId>junit</artifactId>
							<bundleDir>/</bundleDir>
							<bundleFileName>demoFileDelivery-ftp-cf-ds.xml</bundleFileName>
							<includeInApplicationXml>true</includeInApplicationXml>
						</javaModule>
						
						<!--jars required by the web app -->
						<javaModule>
							<groupId>org.ikasan</groupId>
							<artifactId>ikasan-framework</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.springframework</groupId>
							<artifactId>spring</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.springframework</groupId>
							<artifactId>spring-web</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.springframework</groupId>
							<artifactId>spring-webmvc</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.springframework.security</groupId>
							<artifactId>spring-security-core</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.springframework.security</groupId>
							<artifactId>spring-security-core-tiger</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.springframework.security</groupId>
							<artifactId>spring-security-taglibs</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>

						<javaModule>
							<groupId>com.thoughtworks.xstream</groupId>
							<artifactId>xstream</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<jarModule>
							<groupId>org.ikasan</groupId>
							<artifactId>ikasan-common</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						<jarModule>
							<groupId>org.springframework.webflow</groupId>
							<artifactId>org.springframework.webflow</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						<jarModule>
							<groupId>org.springframework.webflow</groupId>
							<artifactId>org.springframework.binding</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						<jarModule>
							<groupId>org.springframework.webflow</groupId>
							<artifactId>org.springframework.js</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						<jarModule>
							<groupId>ognl</groupId>
							<artifactId>ognl</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
                        <jarModule>
                            <groupId>aspectj</groupId>
                            <artifactId>aspectjweaver</artifactId>
                            <bundleDir>lib</bundleDir>
                        </jarModule>
                        
                        <jarModule>
                            <groupId>org.codehaus.groovy</groupId>
                            <artifactId>groovy-all</artifactId>
                            <bundleDir>lib</bundleDir>
                        </jarModule>
						<!--
							module config files must be in the lib dir for the web app to do
							anything
						-->
						<javaModule>
							<groupId>org.ikasan.demo</groupId>
							<artifactId>demoFileDelivery-ftpSource-jar</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
						<javaModule>
							<groupId>org.ikasan.demo</groupId>
							<artifactId>demoFileDelivery-ftpTarget-jar</artifactId>
							<bundleDir>lib</bundleDir>
						</javaModule>
                        
						<!-- additional jars required by the module -->

						<jarModule>
							<groupId>quartz</groupId>
							<artifactId>quartz</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						
						<jarModule>
							<groupId>org.ikasan</groupId>
							<artifactId>ikasan-client-filetransfer</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>

						<jarModule>
							<groupId>org.ikasan</groupId>
							<artifactId>ikasan-connector-base</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>

						<jarModule>
							<groupId>org.ikasan</groupId>
							<artifactId>ikasan-client-connection</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>

						<jarModule>
							<groupId>org.ikasan</groupId>
					      <artifactId>ikasan-connector-basefiletransfer</artifactId>
							<bundleDir>lib</bundleDir>
						</jarModule>
						
			            <jarModule>
			      		  <groupId>commons-net</groupId>
			      		  <artifactId>commons-net</artifactId>
			              <bundleDir>lib</bundleDir>
			            </jarModule>						
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- the war itself -->
